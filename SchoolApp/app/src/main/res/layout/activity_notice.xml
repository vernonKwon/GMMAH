<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gwon_ocheol.schoolapp.com.GMMAS.gwon_ocheol.schoolapp.Notice">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/notice_card_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/notice_loading"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/notice_page_fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_btn"
        android:text="1"
        android:textSize="20dp"
        android:textColor="@color/colorBackground"/>

    <LinearLayout
        android:id="@+id/notice_arc"
        android:visibility="invisible"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/notice_browser_btn"
            android:layout_marginRight="6dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/open_in_browser_image_btn"/>

        <Button
            android:id="@+id/notice_refresh_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/refresh_image_btn"/>

        <Button
            android:id="@+id/prev_notice_btn"
            android:layout_marginRight="6dp"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/circle_btn"
            android:textColor="@color/colorBackground"
            android:layout_gravity="center"
            android:text="&lt;"
            android:textSize="25dp" />

        <Button
            android:id="@+id/next_notice_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/circle_btn"
            android:textColor="@color/colorBackground"
            android:layout_gravity="center"
            android:text="&gt;"
            android:textSize="25dp" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>


</RelativeLayout>
